<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/purple">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="560dp"
        android:layout_height="100dp"
        app:tint="@color/white"
        app:srcCompat="@drawable/key" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="OTP Verification"
        android:textAlignment="center"
        android:textColor="@color/grey_white"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We have sent you an OTP in your email. Please check your spam folder if you can't find any in your inbox!"
        android:textAlignment="center"
        android:padding="20dp"
        android:textColor="@color/grey_white"
        android:textSize="16sp" />

    <!-- OTP Field -->
    <EditText
        android:id="@+id/et_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter here"
        android:inputType="number"
        android:maxLength="6"
        android:padding="10dp"
        android:textColor="@color/grey_white"
        android:textColorHint="#898989"
        android:textSize="50sp" />

    <!-- Submit OTP Button -->
    <Button
        android:id="@+id/btn_submit_otp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:text="Submit OTP"
        android:textSize="20dp"
        app:cornerRadius="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/didn_t_receive_any"
        android:textAlignment="center"
        android:padding="20dp"
        android:textColor="@color/grey_white"
        android:textSize="14sp" />

</LinearLayout>
