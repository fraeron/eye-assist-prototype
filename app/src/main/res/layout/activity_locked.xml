<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="400dp"
        android:layout_height="900px"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/warning"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingBottom="20dp"
            android:src="@drawable/warning_custom" />

        <TextView
            android:id="@+id/title_label"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Account locked"
            android:textColor="@color/grey_white"
            android:textSize="75px" />

        <TextView
            android:id="@+id/descript"
            android:layout_width="450px"
            android:layout_height="150px"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="For your security, this account is locked."
            android:textColor="@color/grey_white"
            android:textSize="40px" />

        <TextView
            android:id="@+id/descript2"
            android:layout_width="800px"
            android:layout_height="150px"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Please contact your administrator or support@eye-assist.com"
            android:textColor="@color/grey_white"
            android:textSize="35px" />
    </LinearLayout>


    <Button
        android:id="@+id/returnBtn"
        android:layout_width="2in"
        android:layout_height="0.3in"
        android:layout_marginBottom="0.1in"
        android:text="Back to login"
        android:textStyle="normal"
        android:theme="@style/Button.LightPurple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>