<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardActivity"
    android:gravity="center"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:columnCount="2"
        android:padding="0dp"
        >

        <LinearLayout
            android:id="@+id/camera_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:background="#FFF98F"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/camera_ico"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:backgroundTint="#626638"
                android:background="@drawable/camera" />
            <TextView
                android:id="@+id/camera_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Camera Mode"
                android:textColor="#626638"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logs_button"
            android:layout_width="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="#8FD0FF"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/activity_ico"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:backgroundTint="#0065FF"
                android:background="@drawable/activity" />
            <TextView
                android:id="@+id/activity_text"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Activity Logs"
                android:textColor="#0065FF"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/sensors_btn"
            android:layout_width="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="#8FFF93"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/admin_ico"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:backgroundTint="#345B35"
                android:background="@drawable/settings" />
            <TextView
                android:id="@+id/admin_text"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Admin Stuff"
                android:textColor="#345B35"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logout_btn"
            android:layout_width="0dp"
            android:layout_row="1"
            android:layout_column="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/light_red"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/logout_ico"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/logout"
                android:backgroundTint="#832323"/>
            <TextView
                android:id="@+id/logout_text"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Logout"
                android:textColor="#832323"
                android:textStyle="bold" />
        </LinearLayout>
    </GridLayout>

</LinearLayout>


