<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="625dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ea_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="EyeAssist"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="inter"
            android:text="Beta 1.0"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="normal"
            android:typeface="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Login to continue"
            android:textAlignment="center"
            android:textColor="#664FA3"
            android:textSize="32sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <!-- Username Field -->

        <EditText
            android:id="@+id/et_username"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:drawableStart="@drawable/user"
            android:drawablePadding="16dp"
            android:drawableTint="#787887"
            android:fontFamily="@font/inter_medium"
            android:hint="Email or Username"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#787887"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Password Field -->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:drawableStart="@drawable/password"
            android:drawablePadding="16dp"
            android:drawableTint="#787887"
            android:fontFamily="@font/inter"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#787887"
            android:textSize="14sp"

            android:drawableEnd="@drawable/visibility_24px"
            android:textStyle="bold" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/inter"
            android:text="Sign In"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Â© 2025 EyeAssist Team. All rights reserved."
        android:textColor="#9797C3"
        android:textSize="10dp"
        android:layout_marginBottom="20dp"
        android:textStyle="normal"
        android:typeface="normal"
        android:textAlignment="center"
        android:layout_gravity="bottom"/>


</FrameLayout>
